/usr/gnuwin32/lib/libseg.la
/usr/gnuwin32/lib/libseg.a
/usr/gnuwin32/lib/librds.la
/usr/gnuwin32/lib/librds.a
/usr/gnuwin32/lib/librdslwp.la
/usr/gnuwin32/lib/librdslwp.a
