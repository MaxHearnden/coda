dnl Process this file with autoconf to produce a configure script

dnl Initialization
AC_INIT(src/lwp.c)
CODA_SETUP_BUILD
AM_INIT_AUTOMAKE(lwp, 1.5)
AM_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CPP
AC_PROG_RANLIB
AC_CHECK_PROG(AR, ar, ar)
export AR
AC_CHECK_PROG(AS, as, as)
AC_PROG_INSTALL
AC_PROG_MAKE_SET
AM_PROG_LIBTOOL

dnl Checks for libraries.
AC_CHECK_LIB(pthread, pthread_create, [LIBPTHREAD="-lpthread"])
AC_CHECK_LIB(posix4, sem_init, [LIBPTHREAD="${LIBPTHREAD} -lposix4"])
AC_SUBST(LIBPTHREAD)
AM_CONDITIONAL(build_pthread, test "x$LIBPTHREAD" != x)

dnl Checks for header files.

dnl Checks for typedefs.
AC_CHECK_TYPE(register_t, int)

dnl Checks for compiler characteristics.

dnl Checks for library functions.
AC_FUNC_MMAP

dnl Checks for system services.
AC_CYGWIN
AC_EXEEXT

dnl Generate output files
AC_SUBST(AFLAGS)
AC_OUTPUT(Makefile include/Makefile include/lwp/Makefile src/Makefile src-pt/Makefile pkgs/Makefile pkgs/lwp.spec pkgs/lwp-nt.spec pkgs/lwp-dos.spec pkgs/lwp-win95.spec)

